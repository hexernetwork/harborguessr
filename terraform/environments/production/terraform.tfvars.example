# terraform/environments/production/terraform.tfvars.example
# Harbor Guesser Production Configuration Template
#
# ⚠️  DO NOT EDIT THIS FILE DIRECTLY ⚠️
#
# This is a template showing what configuration is needed.
# The real configuration file (terraform.tfvars) is:
#   - Auto-generated by running: ../../scripts/generate-setup.sh
#   - Gitignored (never committed to repository)
#   - Contains secure random passwords and your API keys
#
# To get started:
#   1. Run: ../../scripts/generate-setup.sh
#   2. Edit the generated terraform.tfvars file
#   3. Add your Hetzner API token
#   4. Deploy: ../../scripts/deploy.sh

# Hetzner Cloud API Token
# Get from: https://console.hetzner-cloud.com → Security → API Tokens
# Requires: Read & Write permissions
# NEVER commit this to git!
hcloud_token = ""

# SSH Public Key for server access
# Auto-generated as: ../../shared/secrets/harborguessr_rsa.pub
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... harborguessr@username"

# PostgreSQL password for Supabase database
# Auto-generated: 25+ character secure password
postgres_password = "secure-random-password-25-chars"

# JWT secret for Supabase authentication
# Auto-generated: 32+ character secure secret
jwt_secret = "secure-random-jwt-secret-32-chars"

# Security: IP addresses allowed to SSH (CIDR format)
# Auto-detected: Your current public IP address
allowed_ssh_ips = ["192.168.1.100/32"]

# Security: IP addresses allowed to access admin interfaces
# Auto-detected: Your current public IP address
allowed_admin_ips = ["192.168.1.100/32"]

# Server configuration (optional, defaults provided)
server_type = "cpx11"  # Options: cpx11, cpx21, cpx31, cpx41, cpx51
location = "nbg1"      # Options: nbg1 (Nuremberg), fsn1 (Falkenstein), hel1 (Helsinki)

# Resource tags (optional, defaults provided)
tags = {
  project     = "harborguessr"
  service     = "supabase"
  environment = "production"
  managed_by  = "terraform"
}